<h2>Edit Role</h2>


@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        @if (string.IsNullOrWhiteSpace(ViewBag.Error) == false)
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }
        <input type="hidden" name="id" value="@ViewBag.Id"/>

        <div class="form-group">
            <div class="col-md-10">
                <label> Name <input type="text" name="Name" value="@ViewBag.Name" class="form-control" required="required" /> </label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label> Description <textarea name="description" class="form-control">@ViewBag.Description</textarea> </label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label> Application : <i>@ViewBag.SelectedApplicationName</i>  </label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}
