<h2>Create Role</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @if (string.IsNullOrWhiteSpace(ViewBag.Error) == false)
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }

        <div class="form-group">
            <div class="col-md-10">
                <label> Name <input type="text" name="Name" value="@ViewBag.Name" class="form-control" required="required"/> </label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label> Description <textarea name="description" class="form-control">@ViewBag.Description</textarea> </label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>
                    Application
                    <select name="ApplicationId" class="form-control">
                        @foreach (var a in ViewBag.Applications)
                        {
                            if (ViewBag.SelectedApplicationId == a.Id)
                            {
                                @:
                                <option value="@a.Id" selected="selected"> @a.Name </option>
                            }
                            else
                            {
                                @:
                                <option value="@a.Id"> @a.Name </option>
                            }
                        }
                    </select>
                </label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

