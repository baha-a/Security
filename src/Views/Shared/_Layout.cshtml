@using ITech.Security.Business

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" type="text/css" href="~/Scripts/jq-ui-1.11.4/jquery-ui.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Scripts/jq-ui-1.11.4/jquery-ui.theme.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Scripts/JqGrid/trirand/ui.jqgrid.css" />

    <script type="text/javascript" src="~/Scripts/jquery.jqGrid/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.jqGrid/JQ-UI-1.11.4/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/Scripts/JqGrid/trirand/i18n/grid.locale-ar.js"></script>
    <script type="text/javascript" src="~/Scripts/JqGrid/trirand/jquery.jqGrid.min.js"></script>
    <script type="text/javascript" src="~/Scripts/JqGrid/scripts/ITechJqGrid.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Security", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @foreach (var t in this.TopMenuItems())
                    {
                        <li><a href="@t.Url" target="@(t.SameWindow?"":"_blank")"> @t.Name </a></li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("CacheReset", "CacheReset", "Home", new {returnUrl = Request.RawUrl}, null)</li>
                    <li>@Html.ActionLink("ValidateDb", "Refresh", "Home", new {returnUrl = Request.RawUrl}, null)</li>
                    <li> <a href="#"> @User.Identity.Name.FixUserName()</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
